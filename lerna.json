{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "ignoreChanges": ["**/*.md"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "exec": "npx commitlint --from $LERNA_PACKAGE_NAME"
    }
  }
}
